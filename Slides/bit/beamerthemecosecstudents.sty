\defbeamertemplate*{frametitle}{cosec theme}
{%
  \nointerlineskip%
  \vskip-2pt%
  \hbox{\leavevmode
    \advance\beamer@leftmargin by -12bp%
    \advance\beamer@rightmargin by -12bp%
    \beamer@tempdim=\textwidth%
    \advance\beamer@tempdim by \beamer@leftmargin%
    \advance\beamer@tempdim by \beamer@rightmargin%
    \beamer@tempdimx=\paperwidth
    %% Construct the logo (or don't).
%    \ifbmb@coseclogo
%    \setbox\cosecbeamer@logo\hbox{%
%      \coseclogoW{\cosecbeamer@logowidth}%
%    }%
%    %% Calculate remaining width
%    \advance\beamer@tempdimx-0.6cm% \leftskip & \rightskip used below!
%    \advance\beamer@tempdimx-\wd\cosecbeamer@logo
%    \else
    \setbox\cosecbeamer@logo\hbox{}%
%    \fi
    \hskip-\Gm@lmargin\hbox{%
      \ifx\insertframesubtitle\@empty%
      \setbox\cosecbeamer@frametitle\hbox{\insertframetitle\strut}%
      \else
      \setbox\cosecbeamer@frametitle\hbox{\insertframetitle}%
      \fi
      \@tempdima\ht\cosecbeamer@logo% logo itself
      \advance\@tempdima\dp\cosecbeamer@logo% logo itself
      \setbox\@tempboxa\hbox{\strut}\advance\@tempdima\dp\@tempboxa%
      %%% \showthe\@tempdima
      \setbox\beamer@tempbox=\hbox{%
        \begin{minipage}[b]{\beamer@tempdimx}%
          \vbox{}\vskip-.75ex%
          \leftskip0.3cm%
          \rightskip0.3cm plus1fil%
          \leavevmode
          \hbox to 0pt{%
            \hskip-\leftskip
            \hskip\beamer@tempdimx%
            \vbox to 0pt{%
              \vskip-\ht\cosecbeamer@frametitle
              \box\cosecbeamer@logo
              \vss}%
            \hss}%
          \insertframetitle%
          \ifx\insertframesubtitle\@empty%
            \strut\par%
          \else
            \par{\usebeamerfont*{framesubtitle}{%
                \usebeamercolor[fg]{framesubtitle}%
                \insertframesubtitle}\strut\par}%
          \fi%
          \nointerlineskip
          \vbox{}%
        \end{minipage}%
      }%
      %%% \showthe\ht\beamer@tempbox
      %%% \showthe\@tempdima
      \ifdim\ht\beamer@tempbox<\@tempdima
      \setbox\beamer@tempbox\vbox to\@tempdima{\box\beamer@tempbox\vfil}%
      \fi
      \beamer@tempdim=\ht\beamer@tempbox%
      \advance\beamer@tempdim by 2pt%
      \begin{pgfpicture}{0pt}{0pt}{\paperwidth}{\beamer@tempdim}
        \usebeamercolor{frametitle right}
        \pgfpathrectangle{\pgfpointorigin}{\pgfpoint{\paperwidth}{\beamer@tempdim}}
        \pgfusepath{clip}
        \pgftext[left,base]{\pgfuseshading{beamer@frametitleshade}}
      \end{pgfpicture}
      \hskip-\paperwidth%
      %%% \tracingall\showboxdepth7\nonstopmode
      %%% \showbox\beamer@tempbox
       \box\beamer@tempbox%
     }%
    \hskip-\Gm@rmargin%
  }%
  \nointerlineskip
    \vskip-0.2pt
    \hbox to\textwidth{\hskip-\Gm@lmargin\pgfuseshading{beamer@topshade}\hskip-\Gm@rmargin}
    \vskip-2pt
}

