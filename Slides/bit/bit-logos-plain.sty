    \dimen@=#1\relax
    \psscaleboxto(2.32258\dimen@,\dimen@){\coseclogo}}}
\def\coseclogoW#1{{%
    \dimen@=#1\relax
    \psscaleboxto(\dimen@,0.4305555555\dimen@){\coseclogo}}}
\def\coseclogo{{%
  \coseclogorm
  \psset{unit=1cm,fillcolor=uniblau,fillstyle=solid,
    linecolor=uniblau,linewidth=0.1pt,shadow=false}%
  \begin{pspicture}(7.2,3.1)
    \def\scc{{\setbox0\hbox{c}\psscaleboxto(\wd0,\ht0){C}}}%
    \pscustom[fillstyle=solid,fillcolor=uniblau]{%
      \psellipse(1,1.5)(1,1.5)%
      % Make sure that the next ellipse is drawn backwards.
      \psellipse(1,1.5)(0.3,-0.9)%
    }%
    \pspolygon(1.8,1)(6,1)(7.2,1)(7.2,3.1)(6.8,3.1)(6.8,2.9)
      (6.4,2.9)(6.4,3.0)(6,3.0)(6,2)(1.8,2)(1.8,1)\relax
    \rput(0.9,1.5){%
      \psscaleboxto(1.6,2.35){\white \textbf{C}}}
    \rput[l](1.8,1.5){%
      \psscaleboxto(4,0.8){\white \textbf{ose\scc}}}
    \rput[lb](6.1,1.1){\psscaleboxto(1.0,1.6){\rotateleft{\white\bitlogotxt}}}
    \rput[lb](2.1,2.2){\psscaleboxto(3,0.5){\textcolor{uniblau}{\scc{}omputer}}}
    \rput[rb](7.2,0.3){\psscaleboxto(3,0.5){\textcolor{uniblau}{\setbox0\hbox{s}\psscaleboxto(\wd0,\ht0){S}e\scc{}urity}}}
  \end{pspicture}}}

