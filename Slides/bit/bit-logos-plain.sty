\def\bitlogotxt{%
  \vbox{\bitlogosf%
    \hbox{%
    \textbf{%
      \psscalebox{1.2 1.0}{b}%
      \psscalebox{0.8 1.0}{-}%
    }%
    %\kern-.05ex
    \psscalebox{1.2 1.0}{i}%
    \psscalebox{1.0 1.0}{t}%
  }}%
}
\def\@bitlogo#1#2{%
}
\def\bitlogoH#1{{%
    \psset{fillcolor=uniblau,fillstyle=solid,%
      linecolor=uniblau,linewidth=0.0pt,framesep=1pt}%
    \dimen@=#1\relax
    \begin{pspicture}(1.6\dimen@,\dimen@)
      \rput[lb](0,0){%
        \psscaleboxto(1.6\dimen@,\dimen@){\psframebox*{\white\bitlogotxt}}%
      }%
    \end{pspicture}%
  }}
\def\bitlogoW#1{{%
    \psset{fillcolor=uniblau,fillstyle=solid,%
