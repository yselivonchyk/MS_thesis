\mode<presentation>

\definecolor{bonnblue}{RGB}{0, 70, 255}
\definecolor{bonngray}{RGB}{220,220,220}

\setbeamercolor*{normal text}{fg=black,bg=white}
\setbeamercolor*{alerted text}{fg=black}
\setbeamercolor*{example text}{fg=black}
\setbeamercolor*{structure}{fg=black}

\setbeamerfont{alerted text}{series=\bfseries}

\setbeamercolor*{palette primary}{fg=white,bg=bonnblue}
\setbeamercolor*{palette secondary}{fg=white,bg=black}
\setbeamercolor*{palette tertiary}{fg=black,bg=black!30}
\setbeamercolor*{palette quaternary}{fg=black,bg=bonngray}

\setbeamercolor{sidebar}{bg=black!20}

\setbeamercolor*{item projected}{fg=black,bg=bonngray}

\setbeamercolor{block title}{fg=white,bg=bonnblue}
\setbeamercolor{block body}{fg=black,bg=bonngray}
\setbeamercolor{block title alerted}{fg=black,bg=red!60!white}
\setbeamercolor{block body alerted}{fg=black,bg=red!20!white}
\setbeamercolor{block title example}{fg=black,bg=green!60!white}
\setbeamercolor{block body example}{fg=black,bg=green!20!white}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

\setbeamercolor{navigation symbols dimmed}{fg=gray}
\setbeamercolor{navigation symbols}{fg=black}
\setbeamercolor{title}{fg=white,bg=black}

\mode
<all>