\newif\ifbeamer@themeAIS@logoinframe
\newif\ifbeamer@themeAIS@framenavbar
\DeclareOptionBeamer{subsection}[true]{\def\beamer@themeAIS@subsection{#1}}
\DeclareOptionBeamer{shadow}[true]{\def\beamer@themeAIS@shadow{#1}}
\DeclareOptionBeamer{logoinnavbar}[true]{\def\beamer@themeAIS@logoinnavbar{#1}}
\DeclareOptionBeamer{logoinframe}[true]{\csname beamer@themeAIS@logoinframe#1\endcsname}
\DeclareOptionBeamer{framenavbar}[true]{\csname beamer@themeAIS@framenavbar#1\endcsname}
\ExecuteOptionsBeamer{subsection=false,shadow=false,logoinnavbar=false,logoinframe=false,framenavbar=false}
\ProcessOptionsBeamer

\mode<presentation>

\setbeamertemplate{mini frames}[box]
\useoutertheme[subsection=\beamer@themeAIS@subsection,logoinnavbar=\beamer@themeAIS@logoinnavbar]{AIS}

\useinnertheme[shadow=\beamer@themeAIS@shadow]{AIS}

% \usefonttheme{professionalfonts}
\usefonttheme{default}

\usecolortheme{AIS}

\definecolor{AIS_blue}{RGB}{0, 66, 145}

