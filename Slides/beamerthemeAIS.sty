\newcommand{\AIShighlight}[1]{\textcolor{bonnblue}{#1}}
\newcommand{\highlight}[1]{\textcolor{bonnblue}{#1}}
\newcommand{\good}[1]{\textcolor{green!60!black}{#1}}
\newcommand{\bad}[1]{\textcolor{red!80!black}{#1}}

\ifbeamer@themeAIS@framenavbar
\usenavigationsymbolstemplate{%
  \vbox{\hspace*{-1.5cm}
    \hfill
    \hbox{\insertslidenavigationsymbol}
    \hbox{\insertframenavigationsymbol}
    \hbox{\insertsubsectionnavigationsymbol}
    \hbox{\insertsectionnavigationsymbol}
    \hbox{\insertdocnavigationsymbol}
    \hbox{\insertbackfindforwardnavigationsymbol}
    \ifbeamer@themeAIS@logoinframe%
    \includegraphics[scale=0.03]{logo_uni_bonn_bw.pdf}%
    \fi%
  }
}
\else
\ifbeamer@themeAIS@logoinframe%
\usenavigationsymbolstemplate{\includegraphics[scale=0.03]{logo_uni_bonn_bw.pdf}}
